
<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<div class="row">
  <% if user.id == current_user.id %>
    <p><%= link_to "", edit_user_path(user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %></p>
  <% end %>
</div>

<h3>New book</h3> 
<%= form_with model: book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title, class:"form-control" %>
  <h4>Opinion</h4>
  <%= f.text_area :body, class:"form-control", rows:"3" %>
  <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4" %>
<% end %>
  
  
  
