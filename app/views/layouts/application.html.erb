<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <span class="fas fa-home nav-link text-light"><%= link_to "Home", user_path(@user.id) %></span>
              </li>
              <li class="nav-item">
                <span class="fas fa-users nav-link text-light"><%= link_to "User", users_path %></span>
              </li>
              <li class="nav-item">
                <span class="fas fa-book-open nav-link text-light"><%= link_to "Book", books_path %></span>
              </li>
              <li class="nav-item">
                <span class="fas fa-sign-out-alt nav-link text-light" rel="nofollow" data-method="delete"><%= link_to "logout", destroy_user_session_path %></span>
              </li>

            <% else %>
              <li class="nav-item">
                <%= link_to "Home", root_path %>
              </li>
              <li class="nav-item">
                <%= link_to "About", home_about_path %>
              </li>
              <li class="nav-item">
                <%= link_to "Books", new_user_registration_path %>
              </li>
              <li class="nav-item">
                <%= link_to "logout", new_user_session_path %>
              </li>
            <% end %>

            </ul>
          </div>
        </div>
      </nav>
　　</header>
　　
    <main>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
      	<div class="row">
        	<div class="mx-auto">
        		<p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
    </footer>
    

  </body>
</html>



