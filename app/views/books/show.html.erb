<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/left-bar', user: @book.user, book: @new_book %>
    </div>

    <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
              <tr>
                <td>
                  <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
                  <%= link_to @book.user.name, user_path(@book.user.id) %>
                </td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                <td><%= render 'favorite', book: @book %></td>
                <% if @book.user.id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", destroy_book_path, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %></td>
                <% end %>
              </tr>
          </tbody>
        </table>
      </div>
    </div>


  </div>
</div>





  

