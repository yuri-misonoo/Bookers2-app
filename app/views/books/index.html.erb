<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <%= render 'books/error', book: @book %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/left-bar', user: current_user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-striped">
        <thread>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thread>

        <tboby>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to (attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50"), user_path(book.user_id) %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td id="favorite-btn-<%= book.id %>">
                <%= render partial: 'favorites/favorite', locals: {book: book} %>
              </td>
              <td>コメント数：<%= book.book_comments.count %></td>
              <td>閲覧数：<%= book.impressions_count %></td>
          <% end %>
            </tr>
        </tboby>
      </table>
      
    </div>
  </div>
</div>





