<div class="left-side">
  <%= form_with model: @book, local: true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>

<div class="right-side">
  <% @books.each do |book| %>
    <h3>Title</h3>
    <%= book.title %>
    <h3>Opinion</h3>
    <%= book.body %>
  <% end %>

</div>