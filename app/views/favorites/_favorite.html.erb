 <% if book.favorited_by?(current_user) %>
    <p>
      <%= link_to book_favorites_path(book), method: :delete, remote: true, class: "fas fa-heart heart-red" do %>
        <%= book.favorites.count %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to book_favorites_path(book), method: :post, remote: true, class: "fas fa-heart heart-blue" do %>
        <%= book.favorites.count %>
      <% end %>
    </p>
  <% end %>